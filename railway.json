{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE"
  },
  "deploy": {
    "startCommand": "sh -c \"uvicorn main:app --host 0.0.0.0 --port $PORT\"",
    "restartPolicyType": "ON_FAILURE",
    "healthCheckPath": "/api/health",
    "healthCheckTimeout": 100
  }
}
